# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/eu_real_estate
DATABASE_URL_TEST=postgresql://postgres:postgres@localhost:5432/eu_real_estate_test

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_PORT=8020
API_HOST=localhost
NODE_ENV=development

# Web Application Configuration
REACT_APP_API_URL=http://localhost:8020
REACT_APP_ENVIRONMENT=development

# AWS Configuration (for production)
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=eu-real-estate-files

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Payment Gateway (Stripe)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-google-analytics-id

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_MOBILE_APP=true

# Third-Party Integration APIs

# Property Valuation Services
EPD_API_URL=https://api.europeanpropertydata.com
EPD_API_KEY=your-epd-api-key
PROPERTY_RADAR_API_URL=https://api.propertyradar.eu
PROPERTY_RADAR_API_KEY=your-property-radar-api-key

# Mortgage Broker Services
EU_MORTGAGE_API_URL=https://api.eumortgagebroker.com
EU_MORTGAGE_API_KEY=your-eu-mortgage-api-key
MORTGAGE_FINDER_API_URL=https://api.mortgagefinder.eu
MORTGAGE_FINDER_API_KEY=your-mortgage-finder-api-key

# Legal Services
EU_LEGAL_API_URL=https://api.eulegalservices.com
EU_LEGAL_API_KEY=your-eu-legal-api-key

# Additional Payment Gateways
ADYEN_API_URL=https://checkout-test.adyen.com/v70
ADYEN_API_KEY=your-adyen-api-key
ADYEN_MERCHANT_ACCOUNT=your-adyen-merchant-account

# Email Service (SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Additional Configuration
FROM_EMAIL=noreply@eu-real-estate.com